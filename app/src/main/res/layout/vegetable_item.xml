<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="16dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp"
        android:layout_marginHorizontal="15dp"
        android:orientation="vertical"
        android:layout_gravity="center">


        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="Scorpion First Class"
            android:textColor="@color/teal_800"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/green_300"
                >


                <TextView
                    android:id="@+id/date_yesterday1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-20-20"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/lowprice_yesterday1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low: 20 "
                    android:textColor="@color/teal_601"
                    android:textSize="13sp"
                    android:background="@color/green_500"
                    />

                <TextView
                    android:id="@+id/highprice_yesterday1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_900"
                    android:text="High: 50"
                    android:textColor="#B2EBF2"
                    android:textSize="13sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/green_A100"
                >



                <TextView
                    android:id="@+id/date_yesterday0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-20-20"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/lowprice_yesterday0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low Price: 100 "
                    android:textColor="@color/teal_601"
                    android:textSize="13sp"
                    android:background="@color/green_300"
                    />

                <TextView
                    android:id="@+id/highprice_yesterday0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_900"
                    android:text="High Price: 50"
                    android:textColor="#B2EBF2"
                    android:textSize="13sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_weight="1"
                android:background="@color/green_300"
                >


                <TextView
                    android:id="@+id/date_yesterday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-20-20"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/lowprice_yesterday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Low Price: 20 "
                    android:textColor="@color/teal_601"
                    android:textSize="13sp"
                    android:background="@color/green_500"
                    />

                <TextView
                    android:id="@+id/highprice_yesterday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_900"
                    android:text="High Price: 50"
                    android:textColor="#B2EBF2"
                    android:textSize="13sp" />

            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_weight="1"
                android:background="@color/green_A100"
                >

                <TextView
                    android:id="@+id/date_today"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1-20-20"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:layout_gravity="center"
                    />

                <TextView
                    android:id="@+id/lowprice_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="20 "
                    android:textColor="@color/teal_601"
                    android:background="@color/green_300"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/highprice_today"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/green_900"
                    android:text="High Price: 50"
                    android:textColor="#B2EBF2"
                    android:textSize="13sp" />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="@string/inc"
                android:visibility="invisible"
                />
            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:srcCompat="@drawable/ic_baseline_arrow_drop_down_24" />

            <TextView
                android:id="@+id/tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/inc" />

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_arrow_drop_up_24" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:text="@string/inc" />

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_baseline_horizontal_rule_24" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="@string/inc" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>