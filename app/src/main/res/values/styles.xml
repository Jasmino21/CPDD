<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--main time color -->
    <style name="txtSolidRounded" parent="txtSolidRounded_3">
        <item name="android:textColor">@color/teal_800</item>
        <item name="android:textSize">20sp</item>
        <item name="android:background">@drawable/rectangle_bg_green_a100_radius_20</item>
    </style>
    <style name="custom_toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="titleTextColor">#FFFFFF</item>
    </style>
    <style name="groupStyle_light_green_A100">main-bg</style>
    <style name="txtSolidRounded_3">solr</style>

    <!-- location_string -->
    <style name="location_up">
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">#00750C</item>

    </style>

    <!-- baguio -->
    <style name="baguio">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">#00750C</item>
    </style>

    <style name="landing">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/teal_800</item>
    </style>

    <style name="main_weather_description">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#00750C</item>
    </style>
    <!-- 18 degrees styles.xml -->
    <style name="c">
        <item name="android:textSize">45sp</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>
    <style name="small">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/green_900</item>
        <item name="android:shadowColor">@color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">4</item>
        <item name="android:shadowRadius">4</item>
    </style>

    <!-- morning time styles.xml -->
    <style name="oo_am">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/teal_601</item>
    </style>
    <style name="oo_desc">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@color/teal_800_cc</item>
    </style>
    <!-- see result styles.xml -->
    <style name="see_result">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFFFFF</item>
<!--        <item name="android:background">#FFFFFF</item>-->
    </style>

</resources>
